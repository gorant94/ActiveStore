
@model IEnumerable<string>

@Html.ActionLink("Домой", "Main", "Main", null,
    new { @class = "btn btn-block btn-default btn-lg" })

<a href="http://vk.com" class="btn btn-block btn-default btn-lg">VK</a>

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
{
    controller = "Product",
    action = "List",
    category = link,
    page = 1
}, new
{
    @class = "btn btn-block btn-default btn-lg" + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
})
}

@Html.ActionLink("Контакты", "Contacts", "Contacts", null,
    new { @class = "btn btn-block btn-default btn-lg" })

@Html.ActionLink("Корзина", "Index", "Cart", null,
    new { @class = "btn btn-block btn-default btn-lg" })