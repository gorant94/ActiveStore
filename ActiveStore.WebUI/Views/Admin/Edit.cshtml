                }
                else
                {
                    <img class="img-thumbnail" width="150" height="150"
                         src="@Url.Action("GetImage2", "Product",
                        new { Model.ProductId })" />
                }


            </div>

            <div class="form-group">
                <div style="position:relative;">
                    <label>Картинка 3</label>
